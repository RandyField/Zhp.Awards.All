<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no">
    <title>恭喜您，中奖了</title>
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        .tips {
            position: absolute;
            width: 5.1rem;
            height: 1.5rem;
            top: 2.5rem;
            left: calc(50% - 2.5rem);
            font-size: 0.28rem;
            text-align: center;
        }

        #tips-content {
            margin-left: auto;
            margin-right: auto;
            color: black;
        }

        #nickName {
            position: absolute;
            width: 6.5rem;
            height: 1.5rem;
            top: 0.6rem;
            left: calc(50% - 3.25rem);
            font-size: 0.40rem;
            text-align: center;
        }

        #wx-name {
            color: #556cd6;
            font-family: '微软雅黑';
            margin-left: auto;
            margin-right: auto;
        }

        .ipt {
            position: absolute;
            width: 5rem;
            height: 2.5rem;
            left: calc( 50% - 2.5rem);
            left: -webkit( 50% - 1.75rem);
        }

            .ipt div.sure {
                margin-top: 0.2rem;
                background: #ffd619;
                font-weight: bold;
                font-size: 0.37rem;
                text-align: center;
                color: #0070b8;
                height: auto!important;
                height: 2rem;
                min-height: 0.1rem;
            }

        #takeAwayBtn {
            cursor: pointer;
            font-size: 0.4rem;
        }

        #linkToOther {
            cursor: pointer;
            font-size: 0.4rem;
        }

        .modal.in .modal-dialog {
            -webkit-transform: translate(0,-50%);
            -ms-transform: translate(0,-50%);
            -o-transform: translate(0,-50%);
            transform: translate(0,-50%);
        }

        .modal-dialog {
            position: absolute;
            width: 4rem;
            margin: 0px auto;
            left: 0;
            right: 0;
            top: 50%;
        }

        .wrap {
            position: absolute;
            height: 36.1%;
            margin-top: 0px;
            margin-bottom: 0px;
            bottom: 0.5rem;
            left: 3.6rem;
        }

        @@media (min-width:768px) {
            .modal-dialog {
                width: 600px;
            }
        }
    </style>
</head>

<body class="bg">
    @switch (@ViewData["Type"].ToString())
    {
        case "A":
        @: <img src="/wxredpackets/Content/image/YHEye/clipper.jpg" id="topImg" style="width: 100%; height: 100%;" />
                break;
        case "B":
        @: <img src="/wxredpackets/Content/image/YHEye/fan.jpg" id="topImg" style="width: 100%; height: 100%;" />
                break;
        case "C":
        @: <img src="/wxredpackets/Content/image/YHEye/100.jpg" id="topImg" style="width: 100%; height: 100%;" />
                break;
        case "D":
        @: <img src="/wxredpackets/Content/image/YHEye/fanReceived.jpg" id="topImg" style="width: 100%; height: 100%;" />
                break;
        default:
        @: <img src="/wxredpackets/Content/image/YHEye/clipper.jpg" id="topImg" style="width: 100%; height: 100%;" />
                break;
    }

    <div id="nickName">
        <label id="wx-name">@ViewData["wxName"].ToString()</label>
    </div>
    <div class="wrap">
        <div class="ipt">
            <div class="sure button_div" id="takeAwayBtn" style="height: 0.7rem;">核&nbsp;&nbsp;&nbsp;销</div>
            <div class="sure button_div" id="linkToOther" style="height: 0.7rem;">走&nbsp;&nbsp;海&nbsp;&nbsp;进&nbsp;&nbsp;银</div>
        </div>
        @*<div class="tips">
            <label id="tips-content">请前往现场工作人员处核销并领取奖品</label>
        </div>*@
    </div>
    @Html.Partial("tips/tips.modal")
    @Html.Partial("tips/tips.modal.receiving")
    <script src="~/Scripts/jquery-1.11.1.min.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/Scripts/js/rem.js" type="text/javascript"></script>
    <script type="text/javascript">
        window['adaptive'].desinWidth = 720; // 设计图宽度
        window['adaptive'].maxWidth = 540; // 页面最大宽度 默认540
        window['adaptive'].init(); // 调用初始化方法
        $('body').height($('body').get(0).clientHeight + 'px ');
    </script>
</body>
</html>
