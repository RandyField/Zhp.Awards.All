    <style type="text/css">
        .tips {
            position: absolute;
            width: 5.1rem;
            height: 1.5rem;
            top: 1.5rem;
            left: calc(50% - 2.5rem);
            font-size: 0.28rem;
            text-align: center;
        }

        #tips-content {
            margin-left: auto;
            margin-right: auto;
            color: black;
        }

        #nickName {
            position: absolute;
            width: 6.5rem;
            height: 1.5rem;
            top: 0.6rem;
            left: calc(50% - 3.25rem);
            font-size: 0.40rem;
            text-align: center;
        }

        #wx-name {
            color: #fff;
            font-family: '微软雅黑';
            margin-left: auto;
            margin-right: auto;
        }

        .wrap {
            position: absolute;
            height: 92.1%;
            margin-top: 0px;
            margin-bottom: 0px;
            bottom: 0.5rem;
            left: 0rem;
        }


            .wrap .ipt {
                position: absolute;
                width: 7.0rem;
                height: 9.5rem;
                left: 0.1rem;
            }


                .wrap .ipt #logo {
                    position: absolute;
                    left: 1.5rem;
                    top: -0.3rem;
                }


                .wrap .ipt #clickzone {
                    position: absolute;
                    right: 0.1rem;
                    width: 1.5rem;
                    height: 1.5rem;
                }

                .wrap .ipt #logo img {
                    width: 5.5rem;
                }

                .wrap .ipt #stamp {
                    display: none;
                    position: absolute;
                    top: 2.8rem;
                    right: 1.2rem;
                }


                    .wrap .ipt #stamp img {
                        width: 2.0rem;
                    }

                .wrap .ipt div.sure {
                    margin-top: 0.2rem;
                    background: #ffd619;
                    font-weight: bold;
                    font-size: 0.37rem;
                    text-align: center;
                    color: #fefefe;
                    height: auto!important;
                    height: 2rem;
                    min-height: 1rem;
                }

        #takeAwayBtn {
            cursor: pointer;
        }

        .modal.in .modal-dialog {
            -webkit-transform: translate(0,-50%);
            -ms-transform: translate(0,-50%);
            -o-transform: translate(0,-50%);
            transform: translate(0,-50%);
        }

        .modal-dialog {
            position: absolute;
            width: 4rem;
            margin: 0px auto;
            left: 0;
            right: 0;
            top: 50%;
        }

        #takeAwayBtn {
            line-height: 0.95rem;
            /* font-size: 0.7rem; */
            background: #f0445c;
            font-weight: bold;
            font-size: 0.55rem;
            text-align: center;
            color: #ffffff;
            width: 3.36rem;
            /* left: 2rem; */
            height: 0.7rem;
            margin-left: 1.82rem;
            position: absolute;
            bottom: 1.7rem;
            font-family: "华文彩云","幼圆","宋体",sans-serif;
        }

        .ipt .photo, .ipt .sure {
            width: 100%;
            border-radius: 0.9rem;
            height: 0.6rem;
            line-height: 0.6rem;
            overflow: hidden;
        }


        @@media (min-width:768px) {
            .modal-dialog {
                width: 600px;
            }
        }
    </style>
